<div class="carousel" data-module="carousel/Carousel">

    <ul class="carousel__pages">
        {% for page in pages %}
            <li class="carousel__page" data-page>
                <h3>{{ page.heading }}</h3>
                <p>{{ page.copy }}</p>
            </li>
        {% endfor %}

    </ul>

    <div class="carousel__actions">
        <button class="carousel__action" data-button-prev data-direction="prev">previous</button>
        <button class="carousel__action" data-button-next data-direction="next">next</button>
    </div>

</div>
